@model MGG.Crud.Infra.CrossCutting.Identity.ViewModels.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new {@class = "col-12 col-lg-8 mx-auto", role = "form"}))
{
    @Html.AntiForgeryToken()
    <form>
        <div class="form-group">
            @Html.LabelFor(x => x.Email, new {@class = "col-form-label"})
            @Html.TextBoxFor(x => x.Email, new {@class = "form-control"})
            <div class="text-danger">
                @Html.ValidationMessageFor(x => x.Email)
            </div>
        </div>
        <div class="row">
            <div class="col">
                @Html.LabelFor(x => x.Password, new {@class = "col-form-label"})
                @Html.PasswordFor(x => x.ConfirmPassword, new {@class = "form-control"})
                <div class="text-danger">
                    @Html.ValidationMessageFor(x => x.Password)
                </div>
            </div>
            <div class="col">
                @Html.LabelFor(x => x.ConfirmPassword, new {@class = "col-form-label"})
                @Html.PasswordFor(x => x.Password, new {@class = "form-control"})
                <div class="text-danger">
                    @Html.ValidationMessageFor(x => x.ConfirmPassword)
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-center row form-group pt-5 px-1">
            <a href="@Url.Action("Index", "Home")" class="btn btn-link text-uppercase">Voltar</a>
            <input type="submit" class="btn btn-primary text-uppercase" value="Register"/>
        </div>
    </form>
    
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
